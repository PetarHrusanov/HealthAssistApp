@using HealthAssistApp.Common
@model HealthAssistApp.Web.ViewModels.HealthParameters.HealthParametersInputModel
@{
    this.ViewData["Title"] = "Health Parameters";
}

<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<div class="text-left">
    <p>Please enter the following health parameters!</p>
</div>
<form asp-action="HealthParameters" method="post">
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" placeholder="25"/>
        <div><span asp-validation-for="Age" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" placeholder="84"/>
        <div><span asp-validation-for="Weight" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" placeholder="1.78"/>
        <div><span asp-validation-for="Weight" class="text-danger"></span></div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>