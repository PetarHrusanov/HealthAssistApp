@using HealthAssistApp.Common
@model HealthAssistApp.Web.ViewModels.Allergies.AllergiesInputModel
@{
    this.ViewData["Title"] = "Allergies";
}
<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<hr />
<div class="text-left ">
    <p>Please check if you have any of following allergies (if none, leave blank):</p>
</div>
<div class="card-header">
    <form asp-action="Modify" method="post">
        <table class="table">
            <tr>
                <th>Symptom Name</th>
                <th>Present</th>
            </tr>
            <tr>
                <td><label asp-for="Milk"></label></td>
                <td><input asp-for="Milk" type="checkbox" /></td>
            </tr>
            <tr>
                <td><label asp-for="Eggs"></label></td>
                <td><input asp-for="Eggs" type="checkbox" /></td>
            </tr>
            <tr>
                <td><label asp-for="Fish"></label></td>
                <td><input asp-for="Fish" type="checkbox" /></td>
            </tr>
            <tr>
                <td><label asp-for="Crustacean"></label></td>
                <td><input asp-for="Crustacean" type="checkbox" /></td>
            </tr>
            <tr>
                <td><label asp-for="TreeNuts"></label></td>
                <td><input asp-for="TreeNuts" type="checkbox" /></td>
            </tr>
            <tr>
                <td><label asp-for="Peanuts"></label></td>
                <td><input asp-for="Peanuts" type="checkbox" /></td>
            </tr>
            <tr>
                <td><label asp-for="Wheat"></label></td>
                <td><input asp-for="Wheat" type="checkbox" /></td>
            </tr>
            <tr>
                <td><label asp-for="Soybeans"></label></td>
                <td><input asp-for="Soybeans" type="checkbox" /></td>
            </tr>
        </table>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<div class="container">
    <div class="row">
        <div class="col text-center">
            <a asp-action="Back" button class="btn btn-primary">Back</a>
        </div>
    </div>
</div>
