@using HealthAssistApp.Common
@using HealthAssistApp.Web.ViewModels.FoodRegimens
@model HealthAssistApp.Web.ViewModels.FoodRegimens.FoodRegimenMealsIndex
@{
    this.ViewData["Title"] = "Meals";
}

<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
@foreach (var meal in Model.Meals)
{
    <h3>Breakfast</h3>
    <div class="mb-3 row">
        <div class="col-md-3">
            <img class="mw-100" src="@meal.Breakfast.ImageUrl" alt="Max-width 100%">
        </div>

        <div class="col-sm-4">@meal.Breakfast.InstructionForPreparation</div>
    </div>
    <div class="container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Glycemic Index</th>
                    <th>Calories</th>
                    <th>Vegan</th>
                    <th>Vegetarian</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@meal.Breakfast.GlycemicIndex</td>
                    <td>@meal.Breakfast.Calories</td>
                    @if (meal.Breakfast.Vegan)
                    {
                        <td>Yes</td>
                    }
                    @if (!meal.Breakfast.Vegan)
                    {
                        <td>No</td>
                    }
                    @if (meal.Breakfast.Vegetarian)
                    {
                        <td>Yes</td>
                    }
                    @if (!meal.Breakfast.Vegetarian)
                    {
                        <td>No</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
    <hr />
    <h3>Lunch</h3>
    <div class="mb-3 row">
        <div class="col-md-3">
            <img class="mw-100" src="@meal.Lunch.ImageUrl" alt="Max-width 100%">
        </div>

        <div class="col-sm-4">@meal.Lunch.InstructionForPreparation</div>
    </div>
    <div class="container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Glycemic Index</th>
                    <th>Calories</th>
                    <th>Vegan</th>
                    <th>Vegetarian</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@meal.Lunch.GlycemicIndex</td>
                    <td>@meal.Lunch.Calories</td>
                    @if (meal.Lunch.Vegan)
                    {
                        <td>Yes</td>
                    }
                    @if (!meal.Lunch.Vegan)
                    {
                        <td>No</td>
                    }
                    @if (meal.Lunch.Vegetarian)
                    {
                        <td>Yes</td>
                    }
                    @if (!meal.Lunch.Vegetarian)
                    {
                        <td>No</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
    <hr />
    <h3>Diner</h3>
    <div class="mb-3 row">
        <div class="col-md-3">
            <img class="mw-100" src="@meal.Diner.ImageUrl" alt="Max-width 100%">
        </div>

        <div class="col-sm-4">@meal.Diner.InstructionForPreparation</div>
    </div>
    <div class="container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Glycemic Index</th>
                    <th>Calories</th>
                    <th>Vegan</th>
                    <th>Vegetarian</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@meal.Diner.GlycemicIndex</td>
                    <td>@meal.Diner.Calories</td>
                    @if (meal.Diner.Vegan)
                    {
                        <td>Yes</td>
                    }
                    @if (!meal.Diner.Vegan)
                    {
                        <td>No</td>
                    }
                    @if (meal.Diner.Vegetarian)
                    {
                        <td>Yes</td>
                    }
                    @if (!meal.Diner.Vegetarian)
                    {
                        <td>No</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
}
<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="userFoodRegimen"
                   asp-route-healthDosierId="@this.Model.HealthDosierId"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        @if (this.Model.PagesCount <= 5)
        {
            @for (int i = 1; i <= this.Model.PagesCount; i++)
            {
                var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link"
                       asp-route="userFoodRegimen"
                       asp-route-healthDosierId="@this.Model.HealthDosierId"
                       asp-route-page="@i">@i</a>
                </li>
            }
        }
        @if (this.Model.PagesCount > 5)
        {
            @if (this.Model.CurrentPage == 1 || this.Model.CurrentPage==2)
            {
                for (int i = 1; i <= 3; i++)
                {
                    var act = i == this.Model.CurrentPage ? "active" : string.Empty;
                    <li class="page-item @act">
                        <a class="page-link"
                           asp-route="userFoodRegimen"
                           asp-route-healthDosierId="@this.Model.HealthDosierId"
                           asp-route-page="@i">@i</a>
                    </li>
                }
                var active = this.Model.PagesCount == this.Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link"
                       asp-route="userFoodRegimen"
                       asp-route-healthDosierId="@this.Model.HealthDosierId"
                       asp-route-page="@this.Model.PagesCount">@this.Model.PagesCount</a>
                </li>

            }
            @if (this.Model.CurrentPage == this.Model.PagesCount || this.Model.CurrentPage == this.Model.PagesCount - 1)
            {
                var active = 1 == this.Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link"
                       asp-route="userFoodRegimen"
                       asp-route-healthDosierId="@this.Model.HealthDosierId"
                       asp-route-page="1">1</a>
                </li>
                for (int i = this.Model.CurrentPage - 2; i <= this.Model.PagesCount; i++)
                {
                    var act = i == this.Model.CurrentPage ? "active" : string.Empty;
                    <li class="page-item @act">
                        <a class="page-link"
                           asp-route="userFoodRegimen"
                           asp-route-healthDosierId="@this.Model.HealthDosierId"
                           asp-route-page="@i">@i</a>
                    </li>
                }
            }
            @if(this.Model.CurrentPage>2 && this.Model.CurrentPage<this.Model.PagesCount-1)
            {
                var act = 1 == this.Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @act">
                    <a class="page-link"
                       asp-route="userFoodRegimen"
                       asp-route-healthDosierId="@this.Model.HealthDosierId"
                       asp-route-page="1">1</a>
                </li>
                for (int i = this.Model.CurrentPage - 1; i <= this.Model.CurrentPage + 1; i++)
                {
                    var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                    <li class="page-item @active">
                        <a class="page-link"
                           asp-route="userFoodRegimen"
                           asp-route-healthDosierId="@this.Model.HealthDosierId"
                           asp-route-page="@i">@i</a>
                    </li>
                }
                var acti = this.Model.PagesCount == this.Model.CurrentPage ? "active" : string.Empty;
                <li class="page-item @acti">
                    <a class="page-link"
                       asp-route="userFoodRegimen"
                       asp-route-healthDosierId="@this.Model.HealthDosierId"
                       asp-route-page="@this.Model.PagesCount">@this.Model.PagesCount</a>
                </li>
            }
        }


        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="userFoodRegimen"
                   asp-route-healthDosierId="@this.Model.HealthDosierId"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
<div class="container">
    <div class="row">
        <div class="col text-center">
            <a asp-action="Back" button class="btn btn-primary">Back</a>
        </div>
    </div>
</div>