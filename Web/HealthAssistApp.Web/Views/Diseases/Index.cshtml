@using HealthAssistApp.Common
@model HealthAssistApp.Web.ViewModels.Diseases.IndexDiseasesViewModel
@{
    this.ViewData["Title"] = "Diseases";
}

<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>

<div class="row">
    @foreach (var disease in Model.Diseases)
    {
        <div class="col-md-4 media">
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="/Diseases/@disease.Name">
                        @disease.Name
                    </a>
                </h5>
                @disease.Advice
            </div>
        </div>
    }
</div>