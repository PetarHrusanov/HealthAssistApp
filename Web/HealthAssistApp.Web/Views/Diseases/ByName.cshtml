@using HealthAssistApp.Common
@model HealthAssistApp.Web.ViewModels.Diseases.DiseaseViewModel
@{
    this.ViewData["Title"] = Model.Name;
}

<div class="text-center ">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<div class="card-header">
    <h2>@Html.DisplayNameFor(model => model.SanitizedDescriptions)</h2>
    <p>
        @Html.Raw(Model.SanitizedDescriptions)
    </p>
    <hr />
    <h2>
        @Html.DisplayNameFor(model => model.SanitizedAdvice)
    </h2>
    <p>
        @Html.Raw(Model.SanitizedAdvice)
    </p>
</div>

