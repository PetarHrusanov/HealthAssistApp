@using HealthAssistApp.Data.Models.Enums
@model HealthAssistApp.Web.ViewModels.Administration.ExercisesViewModels.ExerciseAdminMofidyViewModel
@{
    ViewData["Title"] = "Create";
}
<h1>Edit</h1>
<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });</script>
<h4>Exercise</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instructions" class="control-label"></label>
        <textarea asp-for="Instructions" class="form-control"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExerciseComplexity" class="control-label"></label>
        <select asp-for="ExerciseComplexity" asp-items="Html.GetEnumSelectList<ExerciseComplexity>()">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="ExerciseComplexity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Confirm" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>