@model HealthAssistApp.Web.ViewModels.Administration.SymptomsViewModels.SymptomsInputViewModel

@{
    ViewData["Title"] = "Symptoms";
    var bodySystems = Model.bodySystems.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}
<h1>Edit</h1>
<h4>Symptom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SymptomId" value="@Model.SymptomId">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="BodySystemId"></label>
                <select asp-for="BodySystemId" asp-items="bodySystems" class="form-control"></select>
                <span asp-validation-for="BodySystemId" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>