@model IEnumerable<HealthAssistApp.Data.Models.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructionForPreparation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vegan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vegetarian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartOfMeal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GlycemicIndex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InstructionForPreparation)
                </td>
                <td>
                    <img src="@item.ImageUrl" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vegan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vegan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vegetarian)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartOfMeal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlycemicIndex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="btn btn-primary" asp-action="CreateRecipes">Create Recipe</a>
</p>

