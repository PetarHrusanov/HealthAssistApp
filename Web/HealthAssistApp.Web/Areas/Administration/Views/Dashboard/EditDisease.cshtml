@using HealthAssistApp.Data.Models.Enums
@model HealthAssistApp.Data.Models.Disease
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Disease</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDisease">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Advice" class="control-label"></label>
                <input asp-for="Advice" class="form-control" />
                <span asp-validation-for="Advice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GlycemicIndex" class="control-label"></label>
                <select asp-for="GlycemicIndex" asp-items="Html.GetEnumSelectList<GlycemicIndex>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="GlycemicIndex" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DeletedOn" class="control-label"></label>
                <input asp-for="DeletedOn" class="form-control" />
                <span asp-validation-for="DeletedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedOn" class="control-label"></label>
                <input asp-for="CreatedOn" class="form-control" />
                <span asp-validation-for="CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModifiedOn" class="control-label"></label>
                <input asp-for="ModifiedOn" class="form-control" />
                <span asp-validation-for="ModifiedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Diseases">Back to List</a>
</div>